{
  "name": "app",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "classnames": "^2.3.1",
    "framer-motion": "^4.1.17",
    "postcss": "^7",
    "react-avatar": "^3.10.0",
    "react-icons": "^4.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@craco/craco": "^6.1.2",
    "autoprefixer": "^9",
    "node-sass": "^6.0.1",
    "postcss-cli": "7.1.2",
    "postcss-preset-env": "^6.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-styleguidist": "^11.1.6"
  },
  "scripts": {
    "start": "npm run build:scss && craco start",
    "test": "craco test",
    "styler": "npm run build:scss && npx styleguidist server",
    "build-stylist": "npx styleguidist build",
    "build:scss": "node-sass ./src/lib/assets/sass/ --output ./src/lib/assets/css/ ",
    "build": "npm run build:scss && rm -rf ./dist && set NODE_ENV=production && babel src/lib --out-dir ./dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14"
  }
}
